---
export interface Props {
    src: string;
    alt: string;
    width: number;
    height: number;
    className: string;
    lazy: string;
}
const { src, alt = "", width, height, className, lazy = "lazy" } = Astro.props as Props;

const img = `<img src="https://res.cloudinary.com/nickgehring/image/upload/w_auto,f_auto,q_auto:best/nickgehring.dev/${src}" alt="${alt}" width=${width} height=${height} class="${className}" loading="${lazy}" />`;
---
<Fragment set:html={img}>